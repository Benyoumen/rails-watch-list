<div class="container">
  <!-- Bookmark Comment Form Section -->
  <div class="card">
    <div class="card-header">
      <h5 class="card-title">Bookmark Comment Form</h5>
      <button type="button" class="close" aria-label="Close" data-dismiss="modal">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="card-body">
      <%= simple_form_for [@list, @bookmark], html: { class: 'modern-form' } do |f| %>
        <div class="form-group">
          <%= f.label :comment %>
          <%= f.input :comment, required: true, class: 'form-control', placeholder: 'Enter your comment' %>
        </div>
        <div class="form-group">
          <%= f.label :movie %>
          <%= f.association :movie, required: true, class: 'form-control' %>
        </div>
        <div class="text-center">
          <%= f.submit 'Submit Comment', class: 'btn btn-primary btn-submit mt-3' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
