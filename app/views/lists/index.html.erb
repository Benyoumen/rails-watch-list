<!-- app/views/pages/home.html.erb -->
<div class="banner-container">
  <div class="banner-nav-bar">
    <div>
      <h1><i class="fas fa-play"></i><span class="logo-title">Watch List</span></h1>
    </div>
    <div>
      <ul class="banner-ul">
        <li>Login</li>
        <li class="btn-sign">Sign up</li>
      </ul>
    </div>
  </div>

  <div class="banner-info">
    <div>
      <p class="banner-title">MOVIE COLLECTION</p>
      <p class="banner-subtitle">All movies available right now!</p>
      <div class="btn-infos">
        <p class="btn-add"><%= link_to "Add Movie", new_movie_path(@movie), class: "btn btn-primary" %></p>
        <p class="btn-more-info"><%= link_to "Add List", new_list_path(@bookmark), class: "btn btn-secondary" %></p>
      </div>
    </div>
  </div>
</div>

<div class="movie-category">
  <p class="category-title">MY LISTS</p>
</div>

<div class="container">
  <div class="lists">
    <% @lists.each do |list| %>
      <div class="left-border">
        <div class="list-box">
          <div class="row">
            <div class="col-lg-6">
              <!-- Add image or other content for each list -->
            </div>
            <div class="col-lg-6">
              <h3 class="list-title"><%= list.name %> List</h3>
              <p class="click-text-content">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi ac interdum tellus.</p>
              <span class="click">
                <%= link_to "More Info", list_path(list), class: "btn btn-info btn-click" %>
              </span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
